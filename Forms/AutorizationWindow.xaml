<Window x:Class="WpfApplicationEntity.AutorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplicationEntity"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="AutorizationWindow" Height="140" Width="250" KeyDown="Window_KeyDown">
    <Grid>
        <StackPanel>
            <WrapPanel Margin="0,10,10,0" HorizontalAlignment="Right">
                <Label Content="Логин: "/>
                <TextBox x:Name="LoginBox" Height="20" Width="150"/>
            </WrapPanel>
            <WrapPanel Margin="0,10,10,0" HorizontalAlignment="Right">
                <Label Content="Пароль: "/>
                <TextBox x:Name="PasswordBox" Height="20" Width="150"/>
            </WrapPanel>
            <WrapPanel Margin="0,10,0,0" HorizontalAlignment="Center">
                <Button x:Name="AutorizationButton" Content="Авторизация" Width="150" Click="AutorizationButton_Click"></Button>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
